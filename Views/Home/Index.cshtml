@model List<ReserveBiteee.Models.CustomerPageImages>

@{
    ViewData["Title"] = "Home Page";
}

<!-- Custom CSS for Enhancements -->
<style>
    /* Hero Section */
    .hero-section {
        background: url('https://source.unsplash.com/1600x900/?food,dining') center/cover no-repeat;
        padding: 120px 20px;
        color: white;
        border-radius: 15px;
        text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.5);
        position: relative;
    }

        .hero-section::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.6);
            border-radius: 15px;
        }

    .hero-content {
        position: relative;
        z-index: 2;
    }

    /* Feature Cards */
    .feature-card {
        transition: transform 0.3s ease-in-out;
        border-radius: 15px;
        overflow: hidden;
        text-align: center;
    }

        .feature-card img {
            width: 100%;
            height: 250px;
            object-fit: cover;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
        }

        .feature-card:hover {
            transform: scale(1.05);
            box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.2);
        }

    /* Call to Action Buttons */
    .cta-btn {
        padding: 12px 30px;
        font-size: 1.2rem;
        font-weight: bold;
        border-radius: 50px;
        transition: all 0.3s ease-in-out;
    }

    .cta-btn-primary {
        background: linear-gradient(to right, #ff512f, #dd2476);
        color: white;
        border: none;
    }

        .cta-btn-primary:hover {
            background: linear-gradient(to right, #dd2476, #ff512f);
        }

    .cta-btn-outline {
        border: 2px solid #28a745;
        color: #28a745;
    }

        .cta-btn-outline:hover {
            background-color: #28a745;
            color: white;
        }
</style>

<div class="container mt-5">
    <!-- Hero Section -->
    <div class="hero-section text-center">
        <div class="hero-content">
            <h1 class="display-4 fw-bold">Welcome to <span style="color: #ffeb3b;">ReserveBite</span></h1>
            <p class="lead">Experience the best dining with our delicious cuisines!</p>
            <a href="/Customer/CustomerIndex" class="btn cta-btn cta-btn-primary me-3">🍔 Explore Our Menu</a>
            <a href="/Account/Login" class="btn cta-btn cta-btn-outline">🔑 Login</a>
        </div>
    </div>

    <!-- About Us Section -->
    <div class="mt-5 text-center">
        <h2 class="text-dark fw-bold">About Us</h2>
        <p class="text-muted">
            At <strong>ReserveBite</strong>, we bring you the finest dishes, made with love and fresh ingredients. Whether you're looking for a cozy dinner, a family gathering, or a quick bite, we ensure an unforgettable experience.
        </p>
    </div>

    <!-- Special Dishes Section -->
    <div class="text-center mb-4">
        <h2 class="fw-bold">Our Special Dishes</h2>
        <p class="text-muted">Delight in our chef’s special menu, curated with the finest ingredients.</p>
    </div>

    <div class="row justify-content-center">
        @if (Model != null && Model.Count > 0)
        {
            @foreach (var image in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-lg border-0 feature-card">
                        <img src="data:image/png;base64,@image.ImageBase64" class="card-img-top" alt="@image.Name">
                        <div class="card-body text-center">
                            <h5 class="fw-bold text-success">🍽️ @image.Name</h5>
                            <p class="text-muted">@image.Description</p>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-md-6 text-center">
                <p class="text-danger fw-bold">No images available.</p>
            </div>
        }
    </div>

    <div class="text-center mt-5">
        <h2 class="fw-bold">Ready to Experience Fine Dining?</h2>
        <p class="text-muted">Book your table now and enjoy an extraordinary meal at <b>ReserveBite</b>.</p>
        <a href="/Reservations" class="btn btn-danger btn-lg mt-3">Book a Table</a>
    </div>
</div>
