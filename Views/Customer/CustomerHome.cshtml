@model List<ReserveBiteee.Models.CustomerPageImages>
@{
    ViewData["Title"] = "Customer Home";
}

<div class="container mt-5">
    <!-- Hotel Introduction Section -->
    <div class="text-center mb-5">
        <h1 class="fw-bold">Welcome to <span class="text-primary">ReserveBite</span></h1>
        <p class="lead text-muted">Experience fine dining with exquisite flavors and a luxurious ambiance.</p>
    </div>

    <!-- Options Section: Table Booking & Menu -->
    <div class="row text-center mb-5">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 p-4">
              
                <img src="~/img/table.jpg" class="card-img-top rounded" alt="Table Booking">
                <div class="card-body">
                    <h4 class="fw-bold">Book a Table</h4>
                    <p class="text-muted">Reserve your table in advance and enjoy a delightful dining experience.</p>
                    <a href="/Reservations" class="btn btn-primary btn-lg">Book Now</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-lg border-0 p-4">
                <img src="~/img/menu.jpg" class="card-img-top " alt="Menu">
                <div class="card-body">
                    <h4 class="fw-bold">View Menu</h4>
                    <p class="text-muted">Explore our wide range of delicious dishes curated by top chefs.</p>
                    <a href="/Menu" class="btn btn-success btn-lg">View Menu</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Special Dishes Section -->
    <div class="text-center mb-4">
        <h2 class="fw-bold">Our Special Dishes</h2>
        <p class="text-muted">Delight in our chef’s special menu, curated with the finest ingredients.</p>
    </div>

    <div class="row justify-content-center">
        @if (Model != null && Model.Count > 0)
        {
            @foreach (var image in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-lg border-0">
                        <img src="data:image/png;base64,@image.ImageBase64" class="card-img-top rounded-top" alt="@image.Name">
                        <div class="card-body text-center">
                            <h5 class="card-title fw-bold">@image.Name</h5>
                            <p class="card-text text-muted">@image.Description</p>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-md-6 text-center">
                <p class="text-danger fw-bold">No images available.</p>
            </div>
        }
    </div>

    <div class="text-center mt-5">
        <h2 class="fw-bold">Ready to Experience Fine Dining?</h2>
        <p class="text-muted">Book your table now and enjoy an extraordinary meal at <b>ReserveBite</b>.</p>
        <a href="/Reservations" class="btn btn-danger btn-lg mt-3">Book a Table</a>
    </div>
</div>

<style>
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 15px;
    }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
        }

        .card img {
            height: 250px;
            object-fit: cover;
        }

    .btn-lg {
        padding: 12px 24px;
        font-size: 1.2rem;
    }
</style>
